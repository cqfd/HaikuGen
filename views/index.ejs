<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script> 

      $('h1').css("opacity",0);
      $('form#tweets').css("opacity",0);

    </script>

  </head>
  <body>
    
    <div class="container">

      <h1><%= title %></h1>

      <form id="tweets" action="/tweets/  " method="get">
        
        <div class="username-field">
          <label for="username">username</label>
          <input type="text" id="username" name="username" />
        </div>

        <div class="button">
          <button type="submit">HAIKUIFY TWEETS</button>
        </div>

      </form>

    </div>
    <script type="text/javascript">

      $("#tweets").submit(function( e ){
        window.location = '/tweets/' + $('#username',this).val();
        e.preventDefault();
        return false;
      });

    </script>

    <script>
      $(document).ready(function() {
        $('h1').animate({opacity: 1}, 1000 );
        $('form#tweets').delay(1000).animate({opacity: 1}, 1000 );
        
        $('.username-field input').focus();
      })
    </script>
  </body>
</html>